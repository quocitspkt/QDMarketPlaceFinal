@section Scripts{
    <script src="~/lib/bootstrap-datepicker/dist/js/bootstrap-datepicker.js"></script>
    <script src="~/lib/angular/angular.js"></script>
    <script src="~/lib/angular-chart/angular-chart.js"></script>
    <script src="~/lib/Chart.js/dist/Chart.js"></script>
    <script src="~/app/controllers/report/index.js"></script>
}
@section Styles{
    <link href="~/lib/bootstrap-datepicker/dist/css/bootstrap-datepicker.css" rel="stylesheet" />
}

<div class="row" ng-app="app">
    <div class="col-md-6 col-sm-6 col-xs-6" >
        <div class="x_panel" ng-controller="BarCtrl">
            <h3 class="item-info">Product per month</h3>
            <canvas id="bar" class="chart chart-bar"
                    chart-data="data" chart-labels="labels"
                    chart-series="series">
            </canvas>
        </div>
    </div>
    <div class="col-md-6 col-sm-6 col-xs-6">
        <div class="x_panel" ng-controller="BarCtrl">
            <h3 class="item-info">Doanh thu mỗi tháng (unit: thousand Dong)</h3>
            <table class="table table-striped" >
                <thead>
                    <tr>
                        <th>Tháng</th>
                        <th>Doanh thu mua hàng</th>
                        <th>Doanh thu</th>
                        <th>Lợi nhuận</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="item in reports">
                        <td>{{item.Month}}</td>
                        <td>{{item.Purchase}}</td>
                        <td>{{item.Revenue}}</td>
                        <td>{{item.Revenue - item.Purchase}}</td>
                    </tr>
                    <tr>
                        <td><b>Sum:</b></td>
                        <td><b>{{sumPur}}</b></td>
                        <td><b>{{sumRev}}</b></td>
                        <td><b>{{sumRev - sumPur}}</b></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="clearfix"></div>