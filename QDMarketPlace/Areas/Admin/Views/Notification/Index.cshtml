@section Scripts{
    <script src="~/lib/bootstrap-datepicker/dist/js/bootstrap-datepicker.js"></script>
    <script src="~/app/controllers/notification/index.js" asp-append-version="true"></script>
    <script>
        var notiObj = new notificationController();
        notiObj.initialize();
    </script>
}
@section Styles{
    <link href="~/lib/bootstrap-datepicker/dist/css/bootstrap-datepicker.css" rel="stylesheet" />
}

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <form id="frmSend">
                <h1>Thông báo</h1>
                <div>
                    <label for="subject">Tiêu đề:</label><br />
                    <input type="text" class="form-control" name="subject" placeholder="subject..." id="txtSubject" required="" /> <br />
                </div>
                <div>
                    <label for="content">Nội dung:</label><br />
                    <textarea class="form-control" name="content" id="txtContent" placeholder="content ..." required=""></textarea> <br />
                </div>
                <div>
                    <a class="btn btn-info" href="#" id="btnSendEmail">Gửi</a>
                </div>
            </form>
            
        </div>
    </div>
</div>
<div class="clearfix"></div>


